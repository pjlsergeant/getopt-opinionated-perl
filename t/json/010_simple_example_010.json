[
    {
        "name":    "Example 1 from ideas: Mix",
        "cmdline": ["-v", "-j", "5", "-f", "foo", "-f", "bar"],
        "setup": [
            ["new", {
                "[v]erbose flag": "Verbose mode",
                "[j]obs number" : "Number of jobs to run",
                "[f]ile many"   : "Files to execute against"
            }]
        ],
        "expected": {
            "verbose": true,
            "jobs": 5,
            "file": ["foo", "bar"]
        }
    },
    {
        "name":    "Example 1 from ideas: Edgier cases",
        "cmdline": ["--jobs", "5", "-f", "foo"],
        "setup": [
            ["new", {
                "[v]erbose flag": "Verbose mode",
                "[j]obs number" : "Number of jobs to run",
                "[f]ile many"   : "Files to execute against"
            }]
        ],
        "expected": {
            "verbose": false,
            "jobs": 5,
            "file": ["foo"]
        }
    },
    {
        "name":    "Double Hyphen",
        "cmdline": ["-v", "-j", "5", "--file", "baz", "--file", "bat", "-f", "foo", "-f", "bar",  "--", "-f", "bla", "-v"],
        "setup": [
            ["new", {
                "[v]erbose flag many": "Verbose mode",
                "[j]obs number" : "Number of jobs to run",
                "[f]ile many"   : "Files to execute against"
            }]
        ],
        "expected": {
            "verbose": 1,
            "jobs": 5,
            "file": ["baz", "bat", "foo", "bar"],
            "catchall": ["-f", "bla", "-v"]
        }
    },
    {
        "name": "Simple required",
        "cmdline": ["-v", "bar"],
        "setup": [
            ["new", {
                "[v]erbose required": "required verbose"
            }]
        ],
        "expected": {
            "verbose": "bar"
        }
    },
    {
        "name": "Simple default",
        "cmdline": [],
        "setup": [
            ["new", {
                "[v]erbose": "default verbose"
            }],
            ["defaults", {
                "verbose": "bar"
            }]
        ],
        "expected": {
            "verbose": "bar"
        }
    },
    {
        "name": "Simply not set",
        "cmdline": [],
        "setup": [
            ["new", {
                "[v]erbose": "verbose"
            }]
        ],
        "expected": {}
    },
    {
        "name": "parse() results",
        "cmdline": [],
        "setup": [
            ["new", {
                "[v]erbose": "verbose"
            }]
        ],
        "parse":    { "foo": "bar" },
        "expected": { "foo": "bar" }
    }
]